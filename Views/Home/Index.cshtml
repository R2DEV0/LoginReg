@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>Register</title>
</head>

<body>

    <div class="container">

        <div class="title">
            <h1> Welcome to Kevin's cool secret site! </h1>
            <h4> Register! </h4>
            <a href="/login"> Login </a>
        </div>
        <div class="form">
            <form asp-action="CreateUser" asp-controller="Home" method="POST">
                <div class="form-group">
                    <label for="firstName">First Name: </label>
                    <input asp-for="firstName" class="form-control">
                    <span class="col-sm-12 text-danger" asp-validation-for="firstName"></span>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name: </label>
                    <input asp-for="lastName" class="form-control">
                    <span class="col-sm-12 text-danger" asp-validation-for="lastName"></span>
                </div>
                <div class="form-group">
                    <label for="Email">Email: </label>
                    <input asp-for="Email" class="form-control">
                    <span class="col-sm-12 text-danger" asp-validation-for="Email"></span> 
                </div>
                <div class="form-group">
                    <label for="Password">Password: </label>
                    <input asp-for="Password" class="form-control">
                    <span class="col-sm-12 text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label for="Confirm">Confirm Password: </label>
                    <input asp-for="Confirm" class="form-control">
                    <span class="col-sm-12 text-danger" asp-validation-for="Confirm"></span>
                </div>
                <button class="btn btn-success btn-Lg"> Submit </button>
            </form>
        </div>
    </div>
</body>

</html>
